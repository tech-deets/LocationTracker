<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:id="@+id/invites_cardview"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="10"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/groupName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10sp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/owner_photo_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="7dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Admin:-"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/ownerName_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="owner"
                            android:textColor="#222"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/ownerPhone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="123"
                        android:textColor="#555"
                        android:textSize="17sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/accept_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="7dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimary"
                android:paddingLeft="15dp"
                app:borderWidth="0dp"
                android:src="@drawable/accept_icon"
                app:fabSize="mini" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/decline_bt"
                android:layout_width="wrap_content"
                android:layout_marginVertical="7dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:paddingLeft="15dp"
                app:borderWidth="0dp"
                android:src="@drawable/reject_icon"
                app:fabSize="mini" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
