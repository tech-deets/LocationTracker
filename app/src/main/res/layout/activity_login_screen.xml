<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/login_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your mobile number"
            android:textSize="20dp"
            android:textColor="#101010"
            android:gravity="center"
            android:layout_margin="20dp"/>
        <TextView
            android:id="@+id/login_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap CONTINUE to Login your account with your phone number."
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/login_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:visibility="gone"
            android:textColor="#e34b73" />
    </LinearLayout>

    <EditText
        android:id="@+id/loginPhone_et"
        android:inputType="number"
        android:hint="Phone Number"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/login_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"
        android:textSize="16dp" />
    <Button
        android:id="@+id/login_bt"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/buttontheme"
        android:textColor="#fff"
        android:text="Login"
        android:layout_marginBottom="30dp"
        android:onClick="login"/>
    <EditText
        android:id="@+id/code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:hint="Enter (6-digit) Verification Code"
        android:gravity="center"/>
    <Button
        android:id="@+id/verify_bt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/buttontheme"
        android:textColor="#fff"
        android:text="Verify"
        android:visibility="gone"
        android:onClick="verifyCode"/>
</LinearLayout>